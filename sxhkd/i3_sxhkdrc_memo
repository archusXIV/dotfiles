# Reload, restart, quit i3.
ctrl + alt + {c,r,q}

# reload sxhkd configuration files.
alt + Caps_Lock

# Invoke the session managemnt menu.
ctrl + alt + Delete

# dmenu/rofi
Menu ; {d,r}

# scratchpad hide/show/rofi
alt + shift + {h,u,r}

# terminal emulators $TERMINAL, URxvt
alt + {_,shift +}Return

# ranger stuff
alt + r ; {a,m,r,s,v}

# URxvt applications
alt + u ; {a,c,d,e,h,j,m,n,p,r,s,t,v,x,y}

# open sxhkdrc_<wm> in vim (s stands for main config)
alt + k ; {b,d,i,s}

# gui applications $EDITOR, $FILEMNGR, geany, $VIRTMNGR, $BROWSER
alt + g ; {e,f,g,v,w}

# audio-video applications qv4l2, pavucontrol, qvidcap
alt + v ; {g,p,q}

# script to launch rofi-record, obs/ssr.
alt + shift + v ; {a,o,v,k}

# toggle/restart polybar(s)
ctrl + {_,shift + }{KP_End,KP_Down,KP_Next,KP_Left}

# controls the webcam rectangle position on the screen.
alt + shift + {Left,Down,Up,Right}

# output/input volume
XF86Audio{Lower,Raise}Volume {_,alt + }

# on the fly output/input volume
alt + {_,shift + }{1-9,0}

# output/input mute
XF86AudioMute {_,alt + }

# mediacontrol --{prev,stop,toggle,next} (cmus,mpd,mpv)
alt + {F9,F10,F11,F12}

# Focus the given direction.
super + {Up,down,Left,Right}

# Focus parent/child
super + shift + {p,x}

# Focus workspace {1-9,10} or send focused to the given desktop.
super + {_,alt + }{1-9,10}

# Switch to next or previous workspace
super + alt + {Left,Right}

# Swap containers.
super + shift + {Up,down,Left,Right}

# Mode swap (between workspaces/outputs)
super + shift + s

# Mode resize
super + r

# Toggle fullscreen/floating state
super + alt + {f,s}

# Move floating window
ctrl + {Left,Up,Down,Right}

# Move floating container in the center of the screen
super + c

# Close/close all/kill current window
super + {_,alt +,ctrl + }q

# close all windows in the present desktop.
super + alt + ctrl + k

# Set splitting direction
super + {v,h}

# Layout toggle
alt + Tab

# Switch between the current-previously focused workspace/output.
super + {_,ctrl +}b

# Cycle between all occupied workspaces and outputs
ctrl + alt + {left,right}

# Move the whole workspace to the next output
super + ctl + {Right,Left}

# Simulate mouse button click
super + ctrl + m : {_,shift + ,ctrl + }space

# Mouse: move or resize window.
super + button{1,3}
