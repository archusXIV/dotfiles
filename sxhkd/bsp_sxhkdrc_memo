# reload sxhkd configuration files.
alt + Escape

# launch default $TERMINAL,urxvtc -name floaterm
alt + {_,shift +} Return

# dmenu-chooser, rofi-chooser
Menu ; {d,r}

# assign/remove the locked flag to all windows localy.
super + Caps_Lock ; {l,u}

# bring all marked windows across all desktops to the current one.
super + b ; m

# bring the windows of the given desktop to the current one.
super + b ; super + {1-9,0}

# center $TERMINAL in screens.
super + c

# focus the older or newer node in the focus history.
super + {i,o}

# kill all existing receptacles.
super + k

# alternate between the tiled and monocle layout.
super + m

# swap current node with the next one.
super + s

# swap focused window with the last one.
super + x

# send window to last split.
super + y

# move focus to next monitor.
super + BackSpace

# insert a preselection in the given direction.
super + Insert ; {Left,Down,Up,Right}

# cancel the preselection for the focused node/desktop.
super + space

# close {or kill} all windows or except the focused/marked ones.
super + alt + {n,c,k}

# set the window state {fullscreen,pseudo_tiled,floating,tiled}.
super + alt + {f,p,s,t}

# restart/quit bspwm.
super + alt + {r,q}

# swap nodes or create a receptacle in the given direction if none.
super + alt + {Left,Down,Up,Right}

# close all windows with the same WM_CLASS in the present desktop.
super + alt + ctrl + c

# send the marked/focused node to a receptacle.
super + ctrl + r

# set the node flag {marked,locked,sticky,private}.
super + ctrl + {m,l,s,p}

# copy and paste all window nodes from a workspace to another one.
super + ctrl + {c,v}

# move cursor
super + ctrl + x : {_,shift + ,shift + super + }{h,j,k,l}

# preselect the ratio.
super + ctrl + {1-9}

# send active window to left/right empty desktop and focus.
super + ctrl + {Left,Right}

# send and follow focused node to given desktop (azerty keyboard).
super + ctrl + alt + {1-9,0}

# send and follow all nodes in the current desktop to the given one.
super + ctrl + shift + {1-9,0}

# swap the current node and the biggest node in the same desktop.
super + shift + b

# rotate all the nodes in screen.
super + shift + r

# send focused window to next monitor.
super + shift + BackSpace

# focus/send (focused node) to the given desktop (azerty keyboard).
super + {_,alt + }{1-9,0}

# circulate the leaves of the tree.
super + {_,shift + }c

# hide/unhide
super + {_,shift + }h

# focus the last node/desktop.
super + {_,shift + }less

# focus or swap the node in the given direction.
super + {_,shift + }{Left,Down,Up,Right}

# close {or kill} focused window.
super + {_,ctrl + }q

# move floating windows with the arrow keys. Continuous input mode.
alt + f : {Left,Down,Up,Right}

# mode for dynamic gaps. Continuous input mode & Escape to exit mode.
alt + g : {h,j,k,l}

# most used gui applications.
alt + g ; {e,f,g,v,w}

# scratchpad hide/unhide
alt + shift + {h,u}

# swap current node with the previous one
alt + s

# URxvt myplayer_audio, cmus, mpm, mutt, htop, jnettop, ncmpcpp, mixer, etc...
alt + u ; {a,c,d,e,h,j,m,n,p,r,s,x,y}

# qv4l2, pavucontrol, qvidcap.
alt + v ; {g,p,q}

# ranger, ranger as root
alt + x ; {r,s}

# resize node in the given direction.
alt + {Left,Down,Up,Right}

# mouse: move or resize window.
super + button{1-3}

# mouse: ungrab when releasing a mouse button.
alt + @button{1-3}

# controls the webcam rectangle position on the screen.
alt + shift + {Left,Down,Up,Right}

# record_options (rofi-record,ssr,kill polybar_mic)
alt + shift + v ; {a,v,k}

# toggle/restart polybar(s)
ctrl + {_,shift + }{1,2,3,4}

# move a floating window.
ctrl + {Left,Down,Up,Right}

# focus left/right occupied desktop.
ctrl + alt + {Left,Right}

# rofi_run -l (logout script).
ctrl + alt + delete

# focus the next/previous empty desktop.
ctrl + shift + {Left,Right}

# pulseaudio_control --sink {down,up}.
Xf86Audio{Lower,Raise}Volume

# pulseaudio_control --sink toggle
Xf86AudioMute

# pulseaudio_control --source {down,up}
alt + XF86Audio{Lower,Raise}Volume

# pulseaudio_control --source toggle
alt + XF86AudioMute

# mediacontrol play/pause.
alt + F11

# mediacontrol stop.
alt + F10

# mediacontrol next.
alt + F12

# mediacontrol prev.
alt + F9
