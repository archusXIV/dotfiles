# reload, restart, exit dk
ctrl + alt + {c,r,q}

# reload sxhkd configuration files.
alt + Caps_Lock (Escape)

# Invoke the session managemnt menu.
ctrl + alt + Delete

# dmenu/rofi
Menu ; {d,r} (chain)

# scratchpad hide/show/rofi
alt + shift + {h,u,r}

# terminals: xterm (zsh), bashterm & xfce4-terminal (zsh)
alt + {_,shift + ,ctrl + }Return

# ranger stuff
alt + r ; {a,m,r,s,v} (chain)

# URxvt applications
alt + u ; {a,c,d,e,h,j,m,n,p,r,s,t,v,x,y} (chain)

# open sxhkdrc_<wm> in vim (s stands for main config)
alt + k ; {b,d,i,s}

# gui applications $EDITOR, $FILEMNGR, geany, $VIRTMNGR, $BROWSER
alt + g ; {e,f,g,v,w} (chain)

# audio-video applications qv4l2, pavucontrol, qvidcap
alt + v ; {g,p,q} (chain)

# script to launch rofi-record, obs/ssr.
super + shift + v ; {a,o,v,k} (chain)

# toggle/restart polybar(s)
ctrl + {_,shift + }{KP_End,KP_Down,KP_Next,KP_Left}

# controls the webcam rectangle position on the screen.
alt + shift + {Left,Down,Up,Right}

# output/input volume
XF86Audio{Lower,Raise}Volume {_,alt + }

# on the fly output/input volume
alt + {_,shift + }{1-9,0}

# output/input mute
XF86AudioMute {_,alt + }

# player control
XF86Audio{Prev,Play,Next}

# player stop
alt + F10

# focus window/workspace previous/next
super + {_,alt + }{Left,Right}

# focus next 2,3 whatever windows form the focused one.
super + shift + {1-9}

# focus monitor next/previous/last
super + {_,shift +,ctrl +}{BackSpace}

# focus the last desktop/monitor
super + {_,shift + }l

# swap tiled window in/out of master, cycle tiled windows in place
super + {space,Tab}

# close/close all/kill focused window.
super + {_,alt +,ctrl + }q

# close all windows except the focused one
alt + q

# toggle floating or sticky
super + alt + {s,space}

# toggle fullscreen and fake fullscreen (enable manipulating fullscreen window)
F11 {_,ctrl + }

# toggle monocle/last layout.
super + {_,shift +}m

# resize/move window using custom script
alt + {_,ctrl + }{Left,Up,Down,Right}

# move the active window up/down the stack
super + ctrl + {KP_Add,KP_Subtract}

# view, send, or follow to workspace {1-9}
super + {_,alt + ,ctrl + }{1-9}

# focus/send/send & follow to monitor number 1, 2, 3
super + {_,alt,ctrl} + {Print,Scroll_Lock,Pause}

# send/follow all windows of the current ws to ws nÂ°
super + shift + s ; {_,alt + }{1-9} (chain) 

# change active workspace layout (f=false, shift for dynamic)
super + {_,shift + }t ; {d,f,g,n,r,s,t,w} (chain)

# change number of windows in master or first stack
super + {_,shift + }{KP_Add,KP_Subtract}

# change gap width
alt + {KP_Add,KP_Subtract}

# change border widths
alt + ctrl + {_,shift + }{equal,minus}
