[reload the hotkeys daemon]
# reload sxhkd configuration files.
alt + Escape
    pkill -USR1 -x sxhkd; \
    notify-send "sxhkd config reloaded"

# Invoke the session managemnt menu.
ctrl + alt + Delete
    rofi_run -l

[dmenu/rofi]
Menu ; {d,r}
    {dmenu_chooser,rofi_chooser}

[scratchpad]
alt + {h,m,t}
    { \
    i3orbsp_scratchpad -h, \
    i3orbsp_scratchpad -m, \
    i3orbsp_scratchpad -t \
    }

[applications bindings]
# terminal emulators
alt + Return
    $TERMINAL

alt + shift + Return
    urxvtc -name floaterm

alt + t ; {r,s}
    {\
    xtranger, \
    xterm -e 'sudo search_install' \
    }

# URxvt applications
alt + u ; {b,c,d,e,h,j,m,n,p,r,s,x,y}
    urxvt_apps -{b,c,d,e,h,j,m,n,p,r,s,x,y}

# gui applications
alt + g ; {e,f,g,v,w}
    {\
    $EDITOR, \
    $FILEMNGR, \
    geany, \
    $VIRTMNGR, \
    $BROWSER \
    }

# audio-video applications
alt + v ; {e,g,p,q}
    {\
    pulseaudio-equalizer-gtk, \
    qv4l2, \
    pavucontrol, \
    qvidcap \
    }

# script to launch rofi-record or ssr.
alt + shift + v ; {r,s,k}
    record_options -{r,s,k}

[polycontrol]
# toggle/restart polybar(s)
ctrl + {_,shift + }{KP_End,KP_Down,KP_Next,KP_Left}
    polybar_control -{t,r}{1,2,3,a}

[webcam_rectangle]
# controls the webcam rectangle position on the screen.
alt + shift + {Left,Down,Up,Right}
    webcam_rectangle {1435 0,0 715,0 0,1435 715}

[volume/mic]
XF86Audio{Lower,Raise}Volume
    volume_control sink --{down,up}; \
    notify-volume

XF86AudioMute
    volume_control sink --toggle

alt + XF86Audio{Lower,Raise}Volume
    volume_control source --{down,up}

alt + XF86AudioMute
    volume_control source --toggle

[player control]
#XF86Audio{Play,Pause}
alt + F11
    mediacontrol --toggle

#XF86AudioNext
alt + F12
    mediacontrol --next

#XF86AudioPrev
alt + F9
    mediacontrol --prev

#XF86AudioStop
alt + F10
    mediacontrol --stop
