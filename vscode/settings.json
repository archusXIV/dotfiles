// Enter your personal settings here[]
{

    // GITHUB COPILOT SETTINGS
    "github.copilot.enable": {
        "markdown": false,
        "plaintext": false,
        "*": true
    },

    // EDITOR SETTINGS
    "editor.accessibilitySupport": "off",
    "editor.autoClosingQuotes": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.fontFamily": "'JetBrainsMono Nerd Font','IBM Plex Mono','Fira Code'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.fontWeight": "300",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": true,
    "editor.insertSpaces": false,
    "editor.lineNumbers": "relative",
    "editor.matchBrackets": "always",
    "editor.minimap.autohide": true,
    "editor.mouseWheelZoom": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.quickSuggestions": {
        "other": "inline",
        "strings": "inline"
    },
    "editor.renderControlCharacters": true,
    "editor.rulers": [100],
    "editor.scrollBeyondLastLine": false,
    "editor.tabCompletion": "on",
    "editor.wordWrapColumn": 85,

    // EXTENSIONS SETTINGS
    "bashIde.explainshellEndpoint": "http://localhost:5000",
    "extensions.ignoreRecommendations": true,

    // FILES SETTINGS
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveWhenNoErrors": true,

    // GIT SETTINGS
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    // SHELL SETTINGS
    "shellcheck.executablePath": "/usr/bin/shellcheck",
    "shellcheck.enable": true,
    "shellcheck.run": "onType",
    "shellcheck.ignorePatterns": {
        "**/*.csh": true,
        "**/*.cshrc": true,
        "**/*.fish": true,
        "**/*.login": true,
        "**/*.logout": true,
        "**/*.tcsh": true,
        "**/*.tcshrc": true,
        "**/*.xonshrc": true,
        "**/*.xsh": true,
        "**/*.zsh": true,
        "**/*.zshrc": true,
        "**/zshrc": true,
        "**/*.zprofile": true,
        "**/zprofile": true,
        "**/*.zlogin": true,
        "**/zlogin": true,
        "**/*.zlogout": true,
        "**/zlogout": true,
        "**/*.zshenv": true,
        "**/zshenv": true,
        "**/*.zsh-theme": true
      },
    "shellformat.effectLanguages": [
        "shellscript",
        "dockerfile",
        "dotenv",
        "hosts",
        "jvmoptions",
        "ignore",
        "gitignore",
        "properties",
        "spring-boot-properties",
        "azcli"
    ],
    "[shellscript]": {
        "editor.autoIndent": "full",
        "files.eol": "\n",
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },

    // SECURITY SETTINGS
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",

    // TERMINAL SETTINGS
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.enablePersistentSessions": false,

    // WINDOW SETTINGS
    "window.openFilesInNewWindow": "on",
    "window.zoomLevel": 0,
    "window.customTitleBarVisibility": "auto",
    "window.density.editorTabHeight": "compact",
    "window.titleBarStyle": "custom",

    // WORKBENCH SETTINGS
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Kanagawa Wave",
    "workbench.tree.indent": 30,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#45b8ac",
        "tree.inactiveIndentGuidesStroke": "#059def",
        "editor.background": "#1e1f29",
        "editor.lineHighlightBorder": "#447ad8",
        "editor.lineHighlightBackground": "#1f1f28",
        "editorCursor.foreground": "#d89e44",
        "editorCursor.background": "#d89e44",
        "editorBracketHighlight.foreground1": "#b675aa",
        "editorBracketHighlight.foreground2": "#9cbf7d",
        "editorBracketHighlight.foreground3": "#f4c870",
        "editorBracketHighlight.foreground4": "#d4775a",
        "editorBracketHighlight.foreground5": "#c25762",
        "editorBracketHighlight.foreground6": "#9caac4",
        "editorBracketMatch.background": "#1e1f29",
        "editorBracketHighlight.unexpectedBracket.foreground": "#db6165",
        "editorStickyScroll.background": "#2d4f67",
        "editorStickyScrollHover.background": "#2a317c"
    },
    "workbench.settings.applyToAllProfiles": [
        "workbench.colorCustomizations"
    ],
    "workbench.productIconTheme": "material-product-icons",
    "workbench.iconTheme": "vscode-simpler-icons",
    "workbench.navigationControl.enabled": false
}
