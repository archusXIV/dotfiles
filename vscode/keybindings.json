// Place your key bindings in this file to override the defaultsauto[]
// Remapped escape to capslock
[
    {
        "key": "capslock",
        "command": "cancelSelection",
        "when": "editorHasSelection && textInputFocus"
    },
    {   "key": "capslock",
        "command": "closeReferenceSearch",
        "when": "inReferenceSearchEditor && !config.editor.stablePeek"
    },
    {   "key": "capslock",
        "command": "editor.action.cancelSelectionAnchor",
        "when": "editorTextFocus && selectionAnchorSet"
    },
    {   "key": "capslock",
        "command": "editor.action.selectEditor",
        "when": "stickyScrollFocused"
    },
    {   "key": "capslock",
        "command": "editor.action.webvieweditor.hideFind",
        "when": "webviewFindWidgetVisible && !editorFocus && activeEditor == 'WebviewEditor'"
    },
    {   "key": "capslock",
        "command": "editor.cancelOperation",
        "when": "cancellableOperation"
    },
    {   "key": "capslock",
        "command": "closeFindWidget",
        "when": "editorFocus && findWidgetVisible && !isComposing"
    },
    {   "key": "capslock",
        "command": "leaveSnippet",
        "when": "editorTextFocus && inSnippetMode"
    },
    {   "key": "capslock",
        "command": "hideSuggestWidget",
        "when": "suggestWidgetVisible && textInputFocus"
    },
    {   "key": "capslock",
        "command": "cancelLinkedEditingInput",
        "when": "LinkedEditingInputVisible && editorTextFocus"
    },
    {   "key": "capslock",
        "command": "cancelRenameInput",
        "when": "editorFocus && renameInputVisible"
    },
    {   "key": "capslock",
        "command": "search.action.cancel",
        "when": "listFocus && searchViewletVisible && !inputFocus && !treestickyScrollFocused && searchState != '0'"
    },
    {   "key": "capslock",
        "command": "workbench.action.closeQuickOpen",
        "when": "inQuickOpen"
    },
    {   "key": "capslock",
        "command": "closeReferenceSearch",
        "when": "editorTextFocus && referenceSearchVisible && !config.editor.stablePeek || referenceSearchVisible && !config.editor.stablePeek && !inputFocus"
    },
    { "key": "capslock",
        "command": "removeSecondaryCursors",
        "when": "editorHasMultipleSelections && textInputFocus"
    },
    {
        "key": "ctrl+alt+t",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+numpad_add",
        "command": "editor.action.fontZoomIn"
    },
    {
        "key": "ctrl+numpad_subtract",
        "command": "editor.action.fontZoomOut"
    },
    {
        "key": "ctrl+numpad0",
        "command": "editor.action.fontZoomReset"
    },
    {
        "key": "ctrl+capslock",
        "command": "editor.action.removeCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+capslock",
        "command": "editor.action.addCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+numpad_subtract",
        "command": "workbench.action.terminal.resizePaneDown"
    },
    {
        "key": "ctrl+shift+numpad_add",
        "command": "workbench.action.terminal.resizePaneUp"
    },
    {
        "key": "ctrl+backspace ctrl+backspace",
        "command": "editor.foldAll",
        "when": "editorTextFocus && foldingEnabled"
    },
    {
        "key": "shift+backspace shift+backspace",
        "command": "editor.unfoldAll",
        "when": "editorTextFocus && foldingEnabled"
    },
    {
        "key": "shift+delete",
        "command": "editor.action.toggleMinimap"
    },
    {
        "key": "alt+f",
        "command": "editor.unfold"
    },
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+down",
        "command": "-editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+up",
        "command": "-editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+f alt+a",
        "command": "editor.unfoldRecursively"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    }
]
