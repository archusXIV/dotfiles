#!/bin/bash

# dependency: xdo
# send/follow all windows of the current ws to ws nÂ°
# options: dk_sendthemall -s (send) <workspace>
#          dk_sendthemall -f (follow) <workspace>

case "$1" in
    -s) for win in $(xdo id -d); do
            dkcmd ws send "$2"
        done
    ;;
    -f) for win in $(xdo id -d); do
            dkcmd ws send "$2"
        done
        dkcmd ws "$2"
    ;;
esac
