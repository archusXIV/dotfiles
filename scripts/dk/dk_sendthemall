#!/bin/bash

# dependency: xdo
# send/follow all windows of the current ws to ws nÂ°
# options: dk_sendthemall -s (send) <workspace>
#          dk_sendthemall -f (follow) <workspace>

_SendThemAllTo() {
    for win in $(xdo id -d); do
        dkcmd ws send "$2"
    done
}

case "$1" in
    -s) _SendThemAllTo ;;
    -f) _SendThemAllTo && dkcmd ws "$2" ;;
esac
