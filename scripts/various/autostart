#!/usr/bin/env bash

# User systemd services.
systemctl --user start mpv-ipc

# Apply the lastest wallpaper
if [[ -n $(command -v nitrogen) ]]; then
    nitrogen --restore &
else
    sh -c "$XDG_CONFIG_HOME"/.fehbg
fi

# Sound
# muting HDMI source/sink & webcam mic too.
for ids in 0 1; do
    pactl set-source-mute "$ids" 1
    pactl set-source-volume "$ids" 0%
done

pactl set-sink-mute 0 1
pactl set-sink-volume 0 0%
pactl set-sink-volume 1 50%

unset ids

# Bars
launch_polybar

# Other settings
cleanup &
rsync -apq "$SCRIPTDIR"/* ~/Documents/scripts/ &
rsync -apq --exclude \
'VirtualBox' "$XDG_CONFIG_HOME"/* ~/Documents/configs/CONFIGS/ &

# Updates script
sleep 10s && updates-viewer --updates
