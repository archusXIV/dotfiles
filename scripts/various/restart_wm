#!/bin/bash

WmName=$(wmctrl -m | awk '/Name: /{print $2}')

WinId() { wmctrl -lx | awk '{print $1}'; }

case "$1" in
    restartmsg)
        [[ $WmName == bspwm ]] && bspc wm -r
        [[ $WmName == i3 ]] && i3-msg restart
        [[ $WmName == dk ]] && dkcmd restart
    ;;
    reloadmsg )
        if [[ $WmName == "bspwm" ]]; then
            "$HOME"/.config/bspwm/bspwmrc -c
        elif [[ $WmName == "i3" ]]; then
            i3-msg reload
        elif [[ $WmName == "dk" ]]; then
            "$HOME"/.config/dk/dkrc
        fi
    ;;
esac
