#!/bin/bash

# Start simplescreenrecorder at least for 30 seconds...
PIPE="/tmp/ssr-command-pipe"

if [[ -p "$PIPE" ]]; then
    rm "$PIPE" && mkfifo "$PIPE"
else
    mkfifo "$PIPE"
fi

simplescreenrecorder \
    --start-hidden \
    --settingsfile="/home/archangel/.config/simplescreenrecorder/input-profiles/triplescreen.conf" < "$PIPE" &

exec 4> "$PIPE"
sleep 3
echo "record-start" >&4
sleep 30
echo "record-save" >&4
sleep 3
echo "quit" >&4
exec 4>&-
rm "$PIPE"
