#!/bin/env bash

wid="$1"
title="$(xtitle "$wid")"
class="$(xdotool search --classname "$wid")"

# Firefox rules.
[[ -z "$state" && "$title" = 'About Mozilla Firefox' ]] \
    && echo "state=floating"

[[ -z "$state" && "$title" = 'Picture-in-Picture' ]] \
    && echo "state=floating" "center=on" "sticky=on"

# Webcam rectangle initial position.
[[ -z "$state" && "$title" = 'V4L2 Viewer' ]] \
    && echo "state=floating" "sticky=on" \
    "rectangle=480x360+1435+715" "layer=above"

# mpv-menu
[[ -z "$state" && "$title" = 'mpv-menu' ]] \
    && echo "state=floating"  \
    "rectangle=948x352+967+723" "layer=above"
